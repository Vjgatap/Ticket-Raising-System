<%- include("partials/header") %>

<h4 class="mb-3">Ticket Management</h4>

<!-- FILTER -->
<form method="GET" action="/admin/tickets" class="mb-3">
  <div class="row g-2">
    <div class="col-md-4">
      <select name="status" class="form-select">
        <option value="">All Status</option>
        <option value="Open" <%= selectedStatus==="Open"?"selected":"" %>>Open</option>
        <option value="In Progress" <%= selectedStatus==="In Progress"?"selected":"" %>>In Progress</option>
        <option value="Resolved" <%= selectedStatus==="Resolved"?"selected":"" %>>Resolved</option>
        <option value="Closed" <%= selectedStatus==="Closed"?"selected":"" %>>Closed</option>
      </select>
    </div>

    <div class="col-md-2">
      <button class="btn btn-primary w-100">Filter</button>
    </div>
  </div>
</form>

<!-- TABLE -->
<table class="table table-bordered table-hover bg-white shadow">
  <thead class="table-dark">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Status</th>
      <th>Assigned To</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% if (tickets.length === 0) { %>
      <tr>
        <td colspan="5" class="text-center text-muted">
          No tickets found
        </td>
      </tr>
    <% } %>

    <% tickets.forEach(t => { %>
      <tr>
        <td>
          <strong><%= t.createdBy.name %></strong><br>
          <small><%= t.createdBy.email %></small>
        </td>

        <td><%= t.title %></td>

        <td>
          <span class="badge 
            <%= t.status === 'Open' ? 'bg-warning' :
                t.status === 'In Progress' ? 'bg-info' :
                t.status === 'Resolved' ? 'bg-success' :
                'bg-secondary' %>">
            <%= t.status %>
          </span>
        </td>

        <td>
          <%= t.assignedTo ? t.assignedTo.name : "Unassigned" %>
        </td>

        <td>
          <form method="POST" action="/admin/tickets/<%= t._id %>/update">
            <select name="status" class="form-select mb-1">
              <option <%= t.status==="Open"?"selected":"" %>>Open</option>
              <option <%= t.status==="In Progress"?"selected":"" %>>In Progress</option>
              <option <%= t.status==="Resolved"?"selected":"" %>>Resolved</option>
              <option <%= t.status==="Closed"?"selected":"" %>>Closed</option>
            </select>

            <select name="assignedTo" class="form-select mb-2">
              <option value="">Unassigned</option>
              <% admins.forEach(a => { %>
                <option value="<%= a._id %>"
                  <%= t.assignedTo && a._id.equals(t.assignedTo._id) ? "selected" : "" %>>
                  <%= a.name %>
                </option>
              <% }) %>
            </select>

            <button class="btn btn-sm btn-success w-100">
              Update
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/admin" class="btn btn-secondary mt-3">Back to Admin Dashboard</a>

<%- include("partials/footer") %>
